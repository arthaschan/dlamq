ALTER TABLE CDM.T_CDM_DL_AIRLINE
 DROP PRIMARY KEY CASCADE;

DROP TABLE CDM.T_CDM_DL_AIRLINE CASCADE CONSTRAINTS;

CREATE TABLE CDM.T_CDM_DL_AIRLINE
(
  FID    INTEGER                                NOT NULL,
  FIATA  VARCHAR2(2 BYTE),
  FICAO  VARCHAR2(3 BYTE),
  FCN    VARCHAR2(30 BYTE)
)
TABLESPACE TBS_CDM
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING
NOCOMPRESS
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON COLUMN CDM.T_CDM_DL_AIRLINE.FIATA IS '2字码';

COMMENT ON COLUMN CDM.T_CDM_DL_AIRLINE.FICAO IS '3字码';

COMMENT ON COLUMN CDM.T_CDM_DL_AIRLINE.FCN IS '中文名';


create sequence T_CDM_DL_AIRLINE_SEQ
minvalue 1
maxvalue 9999999
start with 1
increment by 1
cache 20;

create or replace trigger T_CDM_DL_AIRLINE_TRI
before insert on T_CDM_DL_AIRLINE
for each row when (new.fid is null)
begin
select T_CDM_DL_AIRLINE_SEQ.nextval into :new.fid from dual;
end;

